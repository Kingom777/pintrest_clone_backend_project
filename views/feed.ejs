<% include ./partials/header.ejs%>
<div class="w-full min-h-screen bg-black text-white">
    <div class="cards flex flex-wrap gap-9 px-10 py-10">
        <%posts.forEach(function(elm){ %>
            <div class="w-56">
                <div class="card w-full h-32 rounded-lg overflow-hidden">
                    <img src="/images/uploads/<%=elm.image%>" class="w-full h-full object-cover" alt="">
                </div>
                <h5 class="mt-2 w-[100%] font-semibold text-lg"><%=elm.title%></h5>
                <h5 class="text-xs text-zinc-600 w-[100%]"><%=elm.description%></h5>
                <h6 class="opacity-50 text-xs">@<%= elm.user.username%></h6>
            </div>
       <% }) %>
    </div>
</div>


<% include ./partials/footer.ejs %>