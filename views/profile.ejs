<% include ./partials/header.ejs%>
<div class="profile w-full min-h-screen text-[#1C1C1C] bg-white pt-1">
  <form
    id="uploadform"
    hidden
    action="/fileupload"
    method="post"
    enctype="multipart/form-data"
  >
    <input type="file" name="image" />
  </form>
  <div class="profiledets flex flex-col items-center mt-10">
    <div class="relative">
      <span
        id="uploadicon"
        class="cursor-pointer flex items-center justify-center bg-red-200 absolute bottom-0 right-0 h-8 w-8 rounded-full"
      >
        <i class="text-lg text-zinc-800 ri-pencil-fill"></i>
      </span>
      <div class="w-32 h-32 rounded-full bg-zinc-400 overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= user.profileImagie%>"
          alt=""
        />
      </div>
    </div>
    <h1 class="text-2xl font-semibold mt-2"><%= user.name%></h1>
    <h3 class="text-md">@<%= user.username%></h3>
    <div class="flex gap-2 ">
      <a
        href="/edit"
        class="px-5 text-sm font-semibold mt-3 py-2 rounded-full bg-[#EFEFEF] capitalize hover:bg-[#E2E2E2]"
        >Edit acount</a
      >
      <a
        href="/add"
        class="px-5 text-sm font-semibold mt-3 py-2 rounded-full bg-[#EFEFEF] capitalize hover:bg-[#E2E2E2]"
        >add new post</a
      >
    </div>
  </div>
<% if(user.posts.length > 0){ %>
    <a href="/show/posts">
      <div class="cards flex flex-wrap gap-10  mt-10">
        <div class="card">
          <div class="h-48 w-52 rounded-lg overflow-hidden">
            <img
              class="object-cover w-full h-full"
              src="/images/uploads/<%= user?.posts[0]?.image%>"
              alt="nhi araha hai"
            />
          </div>
          <a
            href="/show/posts"
            class="text-xl font-semibold inline-block mt-2 capitalize"
            >Your Uploded Pins</a
          >
          <h5 class="text-sm font-md opacity-90"><%= user?.posts?.length %></h5>
        </div>
      </div>
    </a>
 <% } %>
</div>

<script>
  document.querySelector("#uploadicon").addEventListener("click", function () {
    document.querySelector("#uploadform input").click();
  });

  document
    .querySelector("#uploadform input")
    .addEventListener("change", function () {
      document.querySelector("#uploadform").submit();
    });
</script>
<% include ./partials/footer.ejs %>
